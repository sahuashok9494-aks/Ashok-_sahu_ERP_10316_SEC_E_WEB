<!-- Q19: Create a simple drawing using the <canvas> element -->
<!-- ===================================================== -->
 <!-- Ashok sahu, ERp 10316-->
<!DOCTYPE html>
<html>
<head>
<title>Canvas Drawing</title>
</head>
<body>

<canvas id="myCanvas" width="300" height="200" style="border:1px solid black;"></canvas>

<script>
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");

/* Rectangle */
ctx.fillStyle = "blue";
ctx.fillRect(20, 20, 100, 60);

/* Circle */
ctx.beginPath();
ctx.arc(180, 60, 30, 0, 2 * Math.PI);
ctx.fillStyle = "red";
ctx.fill();

/* Line */
ctx.beginPath();
ctx.moveTo(20, 150);
ctx.lineTo(280, 150);
ctx.stroke();
</script>

</body>
</html>